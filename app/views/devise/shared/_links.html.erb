<%- if controller_name != 'sessions' %>
  <br /><%= link_to "로그인", new_session_path(resource_name), class: "btn btn btn-light" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <br /><%= link_to "회원가입", new_registration_path(resource_name),class: "btn btn btn-light" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <br /><%= link_to "비밀번호 찾기", new_password_path(resource_name),class: "btn btn btn-light" %><br /><br/>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <br /><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),class: "btn btn btn-light" %><br /><br/>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <br /><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),class: "btn btn btn-light" %><br /><br/>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <br /><%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),class: "btn btn btn-light" %><br /><br />
  <% end -%>
<% end -%>
