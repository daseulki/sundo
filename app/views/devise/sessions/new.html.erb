<!-- Login -->

<section class="container g-pt-100 g-pb-20">
  <div class="row justify-content-between">
    <div class="col-md-6 col-lg-5 order-lg-2 g-mb-80">
      <div class="g-brd-around g-brd-gray-light-v3 g-bg-white rounded g-px-30 g-py-50 mb-4">
        <header class="text-center mb-4">
          <h3 class=" g-color-black g-font-weight-400">
            <i class="fas fa-child"></i> 로그인 <i class="fas fa-child"></i>
          </h3>
        </header>

        <!-- Form -->

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <div class="input-group g-rounded-left-3">
              <span class="input-group-addon g-width-90 g-brd-gray-light-v3 g-color-gray-dark-v5">
                 이메일
              </span>
              <%= f.email_field :email, required: false, autofocus: true, class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v3 g-rounded-left-0 g-rounded-right-3 g-py-15 g-px-15" %>
            </div>
          </div>

          <div class="mb-4">
            <div class="input-group g-rounded-left-3 mb-10">
              <span class="input-group-addon g-width-90 g-brd-gray-light-v3 g-color-gray-dark-v5">
                비밀번호
              </span>
              <%= f.password_field :password, required: false, class: "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v3 g-rounded-left-0 g-rounded-right-3 g-py-15 g-px-15" %>

            </div>
          </div>


          <div class="form-actions">
            <%= f.submit "로그인하기", class: "btn btn-block u-btn-primary g-font-size-12 text-uppercase g-py-12 g-px-25 mt-2 mb-3" %>

          </div>

          <div class="d-flex justify-content-center text-center g-mb-20">
            <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
            <span class="align-self-center g-color-gray-dark-v5 mx-2">OR</span>
            <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
          </div>
          <div class="mb-5">
            <button class="btn btn-block u-btn-facebook g-font-size-12 text-uppercase g-py-12 g-px-25 mr-2" type="button">
              Facebook으로 로그인
            </button>
          </div>

        <!-- End Form -->
      <% end %>
      <div class="text-center">
        <p class="g-color-gray-dark-v5 mb-0">아이디가 없으신가요?
        <%= link_to "회원가입", new_registration_path(resource_name) %></p>
        <p class="g-color-gray-dark-v5 mb-0">비밀번호를 잊어버리셨나요?
          <%= link_to "비밀번호 찾기", new_password_path(resource_name) %></p>
      </div>
    </div>
      </div>



    <div class="col-md-6 order-lg-1 g-mb-80">
      <div class="mb-5">
        <h2 class="h1 heading g-font-weight-400 mb-3 mt-5">아나바다에 오신 것을 환영합니다!</h2>
        <p class="g-color-gray-dark-v4">잠들어 있는 물건이 주인을 만나 사용될 수 있게 연결을 도와주는 공유 경제 사이트 아나바다에서 당신의 보물을 발견할 수 있게 되시기를 바랍니다 </p>
      </div>

      <div class="row">
        <div class="col-lg-9">
          <!-- Icon Blocks -->
          <div class="media mb-5">
            <div class="d-flex mr-3">
              <span class="align-self-center u-icon-v1 u-icon-size--lg g-color-primary">
                <i class="icon-finance-168 u-line-icon-pro"></i>
              </span>
            </div>
            <div class="media-body align-self-center">
              <h3 class="h5 g-font-weight-400">안전한 보안 시스템</h3>
              <p class="g-color-gray-dark-v5 mb-0">Reliable contracts, multifanctionality &amp; best usage of Unify template</p>
            </div>
          </div>
          <!-- End Icon Blocks -->

          <!-- Icon Blocks -->
          <div class="media mb-5">
            <div class="d-flex mr-3">
              <span class="align-self-center u-icon-v1 u-icon-size--lg g-color-primary">
                <i class="icon-finance-193 u-line-icon-pro"></i>
              </span>
            </div>
            <div class="media-body align-self-center">
              <h3 class="h5 g-font-weight-400">새로운 가치 창출</h3>
              <p class="g-color-gray-dark-v5 mb-0">Secure &amp; integrated options to create individual &amp; business websites</p>
            </div>
          </div>
          <!-- End Icon Blocks -->

          <!-- Icon Blocks -->
          <div class="media">
            <div class="d-flex mr-3">
              <span class="align-self-center u-icon-v1 u-icon-size--lg g-color-primary">
                <i class="icon-finance-122 u-line-icon-pro"></i>
              </span>
            </div>
            <div class="media-body align-self-center">
              <h3 class="h5 g-font-weight-400">환경보호</h3>
              <p class="g-color-gray-dark-v5 mb-0">We get it, you're busy and it's important that someone keeps up with marketing</p>
            </div>
          </div>
          <!-- End Icon Blocks -->
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Login -->
