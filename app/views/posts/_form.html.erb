<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this auction_post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
